@model IEnumerable<Collection>

<main>

    @* Hero *@
    <section class="py-5 text-center container">

        <div class="row py-lg-5">
            <div class="col-lg-6 col-md-8 mx-auto">

                <h1 class="fw-light">Collections</h1>

                <p class="lead text-body-secondary">Welcome to Collections section! All the collections ever posted on this website appear here. All the collections here are collections from my youtube channels.</p>
                
                <p>
                    <a asp-controller="Collection" asp-action="Create" type="button" class="btn btn-primary my-2">Create collection</a>
                    <a href="#" class="btn btn-secondary my-2">Secondary action</a>
                </p>

            </div>
        </div>

    </section>


    @* Search bar *@
    <form class="d-flex w-50 mb-2" role="search" asp-controller="Collection" asp-action="Index">
        <input class="form-control me-2" type="search" placeholder="Search Collections" aria-label="Search" name="SearchString" />
        <button class="btn btn-outline-success me-2" type="submit">Search</button>
        <a class="btn btn-outline-danger" asp-area="" asp-controller="Collection" asp-action="Index">Reset</a>
    </form>


    @* Cards *@
    <div class="album py-5 bg-light">
        <div class="container">

            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

                @foreach (var item in Model)
                {
                    <div class="col">
                        <div class="card shadow-sm">
                            <img class="bd-placeholder-img card-img-top" src="@item.Image" width="100%" height="225" alt="Card image cap">
                            <div class="card-body">
                                <p class="card-text">@item.Title</p>
                                <p class="card-text">@item.Description</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a asp-controller="Collection" asp-action="Detail" asp-route-id="@item.Id" type="button" class="btn btn-sm btn-outline-secondary">View</a>
                                        <a asp-controller="Collection" asp-action="Edit" asp-route-id="@item.Id" type="button" class="btn btn-sm btn-outline-secondary">Edit</a>
                                        <a asp-controller="Collection" asp-action="Delete" asp-route-id="@item.Id" type="button" class="btn btn-sm btn-outline-secondary">Delete</a>
                                    </div>
                                    <small class="text-body-secondary">@item.CollectionCategory</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>

        </div>
    </div>

</main>