@using RecipeWebsite.ViewModels.Searchbar

@model SearchbarViewModel


<div class="search-results">
    <h1>Search Results</h1>

    @if (Model.Posts.Count != 0)
    {
        <h3>Posts</h3>

        <div class="album py-5 bg-light">
            <div class="container">

                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                    @foreach (var post in Model.Posts)
                    {
                        <div class="col">
                            <div class="card shadow-sm">
                                <img class="bd-placeholder-img card-img-top" src="@post.Image" width="100%" height="225" alt="Card image cap">
                                <div class="card-body">
                                    <p class="card-text">@post.Title</p>
                                    <p class="card-text">@post.Description</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <a asp-controller="Collection" asp-action="Detail" asp-route-id="@post.Id" type="button" class="btn btn-sm btn-outline-secondary">View</a>
                                            <a asp-controller="Collection" asp-action="Edit" asp-route-id="@post.Id" type="button" class="btn btn-sm btn-outline-secondary">Edit</a>
                                            <a asp-controller="Collection" asp-action="Delete" asp-route-id="@post.Id" type="button" class="btn btn-sm btn-outline-secondary">Delete</a>
                                        </div>
                                        <small class="text-body-secondary">@post.PostCategory</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

            </div>
        </div>
    }

    @if (Model.Collections.Count != 0)
    {
        <h3>Collections</h3>

        <div class="album py-5 bg-light">
            <div class="container">

                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                    @foreach (var collection in Model.Collections)
                    {
                        <div class="col">
                            <div class="card shadow-sm">
                                <img class="bd-placeholder-img card-img-top" src="@collection.Image" width="100%" height="225" alt="Card image cap">
                                <div class="card-body">
                                    <p class="card-text">@collection.Title</p>
                                    <p class="card-text">@collection.Description</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <a asp-controller="Collection" asp-action="Detail" asp-route-id="@collection.Id" type="button" class="btn btn-sm btn-outline-secondary">View</a>
                                            <a asp-controller="Collection" asp-action="Edit" asp-route-id="@collection.Id" type="button" class="btn btn-sm btn-outline-secondary">Edit</a>
                                            <a asp-controller="Collection" asp-action="Delete" asp-route-id="@collection.Id" type="button" class="btn btn-sm btn-outline-secondary">Delete</a>
                                        </div>
                                        <small class="text-body-secondary">@collection.CollectionCategory</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

            </div>
        </div>
    }
    
</div>