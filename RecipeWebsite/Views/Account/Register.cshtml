﻿@using RecipeWebsite.ViewModels.Account

@model RegisterViewModel

@* Header *@
<div class="py-5 text-center">    
    <h2>Account Register form</h2>
    <p class="lead">Haven't Registered? Register an account here!</p>
</div>

@* Registeration form *@
<form asp-controller="Account" asp-action="Register" method="post" role="form">
    
    <div class="row g-5">

        @* Right Side *@
        <div class="col-md-5 col-lg-4 order-md-last">
            @* OAuth *@
        </div>

        @* Left Side *@
        <div class="col-md-7 col-lg-8">
            <h4 class="mb-3">Account Registeration Details</h4>
            <form class="needs-validation" novalidate="">
                <div class="row g-3">

                    @* Name *@
                    <div class="col-sm-6">
                        <label asp-for="FirstName" class="form-label">First name</label>
                        <input asp-for="FirstName" type="text" class="form-control" id="firstName" placeholder="" value="" required="">
                        <div class="invalid-feedback">
                            Valid first name is required.
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <label asp-for="LastName" class="form-label">Last name</label>
                        <input asp-for="LastName" type="text" class="form-control" id="lastName" placeholder="" value="" required="">
                        <div class="invalid-feedback">
                            Valid last name is required.
                        </div>
                    </div>

                    @* User Name *@
                    <div class="col-12">
                        <label asp-for="UserName" class="form-label">Username</label>
                        <div class="input-group has-validation">
                        <span class="input-group-text">@@</span>
                        <input asp-for="UserName" type="text" class="form-control" id="username" placeholder="Username" required="">
                        <div class="invalid-feedback">
                            Your username is required.
                        </div>
                        </div>
                    </div>

                    @* Email address *@
                    <div class="col-12">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" type="email" class="form-control" id="email" placeholder="you@example.com">
                        <div id="passwordHelpBlock" class="form-text">
                            Please enter a valid email address for verification.
                        </div>
                        <div class="invalid-feedback">
                            Your Email address is required.
                        </div>
                    </div>

                    @* Password *@
                    <div class="col-12">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Password">
                        <div id="passwordHelpBlock" class="form-text">
                            Your password must be 6-20 characters long.
                        </div>
                        <div class="invalid-feedback">
                            Your Password is required.
                        </div>
                    </div>

                    <div class="col-12">
                        <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirm password" placeholder="Confirm Password">
                        <div id="passwordHelpBlock" class="form-text">
                            Confirm your Password here
                        </div>
                        <div class="invalid-feedback">
                            Please retype your password.
                        </div>
                    </div>
                </div>

                <hr class="my-4">

                @* Register *@
                <div class="form-group mb-3">
                    <button class="w-100 btn btn-primary btn-lg" type="submit">Register</button>
                </div>

                <hr class="my-4">

                @* Login *@
                <p>
                    <a asp-action="Login">Already a Registered user?</a>
                </p>
            </form>
        </div>

    </div>

</form>