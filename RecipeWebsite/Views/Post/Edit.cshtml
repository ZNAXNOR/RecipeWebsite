@using RecipeWebsite.Data.Enum;
@using RecipeWebsite.ViewModels.Post;

@model EditPostViewModel

<form method="post" asp-action="Edit" enctype="multipart/form-data">

    <div class="container">

        @*Title*@
        <div class="mb-3">
            <label asp-for="Title" class="form-label">Title</label>
            <input asp-for="Title" class="form-control" placeholder="post title">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        @*Description*@
        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <input asp-for="Description" class="form-control" placeholder="post description">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        @*Link*@
        <div class="mb-3">
            <label asp-for="Link" class="form-label">Youtube Recipe Link</label>
            <input asp-for="Link" class="form-control" placeholder="youtube recipe link">
        </div>

        @*PostCategory*@
        <div class="mb-3">
            <label asp-for="PostCategory" class="form-label">Post Category</label>
            <select asp-for="PostCategory" asp-items="@Html.GetEnumSelectList<PostCategory>()" class="form-control">
                <option value="">Choose a category...</option>
            </select>
            <span asp-validation-for="PostCategory" class="text-danger"></span>
        </div>

        @*Ingredients*@


        @*Recipe*@
        <div class="mb-3">
            <label asp-for="Recipe" class="form-label">Recipe</label>
            <textarea asp-for="Recipe" class="form-control" id="Recipe" placeholder="recipe goes here" rows="5"></textarea>
            <span asp-validation-for="Recipe" class="text-danger"></span>
        </div>

        @*Image*@
        <div class="mb-3">
            <label asp-for="Image">Image</label>
            <input asp-for="Image" type="file" class="form-control" placeholder="Image">
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>

        @*Submit*@
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="reset" class="btn btn-secondary">Reset</button>
    </div>

</form>